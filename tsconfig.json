{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* JavaScript Support */
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
